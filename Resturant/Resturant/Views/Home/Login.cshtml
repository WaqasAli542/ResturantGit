@{
    ViewBag.Title = "Login";
}

<!-- Fixed navbar -->
<nav class="navbar navbar-inverse navbar-fixed-top nav-small">
    <div class="container-fluid">
        <div class="navbar-header"> <a class="navbar-brand" href="#"><img src="~/Content/images/logo.png" alt=""></a> </div>
        <div class="order-now-top-button"> <a href="#">ORDER NOW</a> </div>
        <!--/.nav-collapse -->
    </div>
</nav>
<div class="container-fluid  mt70 text-center pt140">
    <div class="row">
        <div class="col-xs-12">
            <h2 class="mb30">LOG INTO YOUR ACCOUNT</h2>
            <p class="mb30">Please use the form below to log into your account.</p>
            <form class="login" method="post" action="loginrequest">
                <div class="form-group mb30">
                    <input type="email" class="form-control" name="Email" id="" placeholder="Email">
                </div>
                <div class="form-group mb30">
                    <input type="password" class="form-control" name="Password" id="" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
            <h2 class="mb30">DON'T HAVE AN ACCOUNT YET?</h2>
            <p class="mb20">
                You actually don't need one before you place an order. You can easily create an account as <br>
                your checking out, or you're welcome to checkout as a guest. It's totally up to you.
            </p>
            <button type="submit" class="btn btn-primary mb30">Start an Order</button>
            <p>Or, if you really want to create an account before your first order, you can <a href="/Home/Signup">sign up here.</a></p>
        </div>
    </div>
</div>
<!-- /container --> 
