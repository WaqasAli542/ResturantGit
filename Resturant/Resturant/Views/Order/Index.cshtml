@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model List<Resturant.Models.Order>
@using Resturant.Models;
<div class="box">
    <div class="box-header">
        <h3 class="box-title">List of Ingredients</h3>
    </div>
    <div class="box-body">
        <table id="example2" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer Name</th>
                    <th>Address</th>
                    <th>Time</th>
                    <th>Status</th>
                </tr>

            </thead>
            @foreach (Order orders in Model.ToList())
            {
                <tr onclick="location.href='@Url.Action("OrderById", "Order", new { id = orders.Id })'">
                    <td>@orders.Id</td>
                    <td>@orders.Customer.FirstName @orders.Customer.LastName</td>
                    <td>@orders.Customer.Address</td>
                    <td>11:00 Pm</td>
                    <td>Paid</td>
                </tr>
            }
            <tbody>
        </table>
    </div>
</div>